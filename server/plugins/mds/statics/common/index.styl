html
  font: normal normal normal 16px/150% Arial,Verdana,"微软雅黑";
  width: 100%
  height: 100%
body
  padding: 1em;
  width: 100%
  height: 100%

@import './markdown'

tree()
  .itemroot
    .itemCategory
      a.htitle
        font-size: 1.2em
        font-weight: 400
      ul
        margin-top: 0.3em
        margin-left: 0;
        li
          line-height: 190%
          text-indent: 1em
          &:hover
            background-color: #6cbcf5
            a.htitle
              color: #ffffff
              font-weight: 100
          a.htitle
            display: block
            font-size: 0.9em

.docs-container
  width: 1012px;
  margin: 0 auto;
  display: flex
  .docs-tree
    width: 22%
    display: flex
    background-color: #ffffff
    border-right: 1px solid #fff5e9
    justify-content: center
    padding-top: 0.7em
    margin-left: 0.7em
    margin-right: 1.5em
    > .hlist
      width: 100%
    .hlist
      tree()
  .docs-content
    flex: 1
    margin-right: 6em
  .docs-menu
    code
      display: none
    li
      font-size: 14px;
    position: absolute
    right: 0
    top: 0

@import "./media"