html
  font-size: 16px

.covers-list
  li
    padding: 0;
    list-style: none;
    width: 15em;
    height: 25em;
    margin: 0.5em;
    position: relative;
    display: inline-block;
    vertical-align: middle;
    border: 1px solid #d0d0d0;
    border-radius: 5px;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
    -webkit-transition: all 0.2s linear;
    transition: all 0.2s linear;
    &:hover
      -webkit-transform: translate3d(0,-2px,0);
      transform: translate3d(0,-2px,0);
      box-shadow: 0 5px 10px rgba(0,0,0,.1)

    &.item
      .hheader
        height: 16em;
        img
          width: 100%
      .hbody
        height: 6em;
        padding: 0.6em
      .cover-title
        font-size: 24px;
        font-weight: bold;
      .cover-descript
        font-size: 14px;
        color: #b7b7b7;
