
ss-row-lists-flex($flex-flow = row nowrap, $justify-content = flex-start, $align-items = initial, $align-content = initial, $header-border-color = none,  $header-width = 100px, $header-height = 100px, $hbody-margin = 0 0 0 20px, $hbody-width = 80%, $hfoot-width = 100px, $title-color = #333, $title-fs = 16px, $title-mb = 10px, $content-color = #666, $content-fs = 14px, $content-mb = 10px)
  ss-display-flex($flex-flow, $justify-content, $align-items, $align-content)
  >li
    ss-lists-item($header-border-color,  $header-width, $header-height, $hbody-margin, $hbody-width, $hfoot-width, $title-color, $title-fs, $title-mb, $content-color, $content-fs, $content-mb)

//适合于带边框的list
ss-item-border($background = #fff, $border-color = #e3e3e3, $color = #333, $min-width = 1rem, $border-radius = .053333rem)
  ss-pbtn($background, $border-color, $color, none, $min-width, $border-radius)
  padding: 1px 7px;
  // line-height: 34px
  min-width: 0.8rem;
  &:after
    border-color: #ccc
  &.active
    // background: #fff
    color: #2585cf
    &:after
      border-color: #2585cf


//处理星星或钻石列表
ss-list-icon($margin-left = 5px, $content-li = '', $color-li = #999, $li-yiban = false, $content-li-yiban = '')
  ss-display-flex(row nowrap, flex-start)
  >li
    margin-left: $margin-left
    &:before
      content: $content-li
      color: $color-li
    if ($li-yiban == true)
      &.icon-yiban
        &:before
          content: $content-li-yiban
    &.no-icon
      &:before
        content: ''


/**
 * 也可适用于item
 * @type {[type]}
 */
//适合于历史搜索，热门搜索等  class item-list 
ss-item-list($hheader-bg = #efeeee, $hheader-height = 30px, $hheader-padding = .08rem .146667rem, $hheader-color= #999, $hbody-padding = .2rem .2rem .066667rem .2rem, $hbody-list-margin-left = .133333rem, $hbody-list-jus = flex-start, $hbody-list-align = flex-start, $hbody-list-margin-bottom = .133333rem )
  background: #fff 
  line-height: normal
  .item-head //hheader
    background: $hheader-bg
    height: $hheader-height
    // line-height: @height
    padding: $hheader-padding
    em
      font-style: normal
      color: $hheader-color
  .hbody
    padding: $hbody-padding
    ss-row-list($hbody-list-margin-left,  $hbody-list-jus, $hbody-list-align,  $hbody-list-margin-bottom)
  .icon-tag 
    ss-tag(#fff, #999, #333, .053333rem, .053333rem, .2rem, 12px, .1rem)      //首页相关类型
    &.active
      color: #2485cf  
      &:after
        border: 1px solid @color

ss-item-title-icon($font-size = 16px, $width = 82%, $icon-font-size = 20px, $icon-color = #999, $icon-content = '')
  ss-display-flex(row nowrap, space-between, flex-start)
  em
    font-style: normal;
    display: block;
    font-size: $font-size
    width: $width
  .i-icon
    font-size: $icon-font-size
    color: $icon-color
    &:before
      content: $icon-content
