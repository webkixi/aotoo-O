//信息流列表
.ss-flow-bottom-fff
  position: relative
  &:after
    content: ''
    background: #fff
    position: absolute
    bottom: 0
    height: 2px
    width: 100%
    left: 0
.ss-flow-li
  &:first-child:nth-last-child(2), &:first-child:nth-last-child(2)~li,
  &:first-child:nth-last-child(3)~li,
  &:first-child:nth-last-child(5), &:first-child:nth-last-child(5)~li:nth-child(2),
  &:first-child:nth-last-child(8), &:first-child:nth-last-child(8)~li:nth-child(2)
    width: 50%
  &:first-child:nth-last-child(6)
    width: 66.66%
    @extends .ss-flow-bottom-fff

  &:first-child:nth-last-child(3),
  &:first-child:nth-last-child(4),
  &:first-child:nth-last-child(7)
    width: 100%
    @extends .ss-flow-bottom-fff

  &:first-child:nth-last-child(4)~li,
  &:first-child:nth-last-child(5)~li,
  &:first-child:nth-last-child(6)~li
  &:first-child:nth-last-child(7)~li,
  &:first-child:nth-last-child(8)~li,
  &:first-child:nth-last-child(9), &:first-child:nth-last-child(9)~li
    width: 33.33%

  &:first-child:nth-last-child(5), &:first-child:nth-last-child(5)~li:nth-child(2),
  &:first-child:nth-last-child(6)~li:nth-child(2),
  &:first-child:nth-last-child(7)~li:nth-child(2), &:first-child:nth-last-child(7)~li:nth-child(3), &:first-child:nth-last-child(7)~li:nth-child(4),
  &:first-child:nth-last-child(8), &:first-child:nth-last-child(8)~li:nth-child(2), &:first-child:nth-last-child(8)~li:nth-child(3), &:first-child:nth-last-child(8)~li:nth-child(4), &:first-child:nth-last-child(8)~li:nth-child(5),
  &:first-child:nth-last-child(9), &:first-child:nth-last-child(9)~li:nth-child(2), &:first-child:nth-last-child(9)~li:nth-child(3), &:first-child:nth-last-child(9)~li:nth-child(4), &:first-child:nth-last-child(9)~li:nth-child(5), &:first-child:nth-last-child(9)~li:nth-child(6)
    @extends .ss-flow-bottom-fff

.ss-flow
  ss-display-flex(row wrap, flex-start)
  margin: 0 -1px;
  >li
    min-height: 200px
    box-sizing: border-box;
    color: #333
    padding: 0 1px
    @extends .ss-flow-li
    .inner
      width: 100%
      height: 100%
      background: #ddd
      @extends .column-flex-center-center
    
.ss-flow-2
  margin: 0 -1px;
  overflow: hidden
  >li
    box-sizing: border-box;
    color: #333
    height: auto
    padding: 0 1px
    float: left
    @extends .ss-flow-li
    .inner
      background: #ddd
      display: block
      padding-top: 100%;
      position: relative
    .hheader
      position: absolute
      top: 0
      left: 0
      width: 100%
      height: 100%
      @extends .column-flex-center-center
    .clear
      clear: both
    &:first-child:nth-last-child(6)~li:nth-child(4)
      @extends .ss-flow-2 >li .clear