/**
 * 注意 +prefix-classes 不能为数字开头，如果颜色以数字开头的话 ，统一在前面加个字母 c 如： .c3b9ce7
 * @type {[type]}
 */
 $height= 32px 
 $height-small= 24px 
 $height-long= 40px

.btn
  
  cursor: pointer
  display: block
  vertical-align: middle
  white-space: nowrap
  text-decoration: none
  text-align: center
  ss-display-flex(row, center, center, center)
  &:active,&:hover
    opacity: 0.85
  &.btn-small
    height:  $height-small
    padding: 0 7px;
  &.btn-large
    height: $height-long
    padding: 0 15px
  &.btn-long
    width: 100%
  >*[type='btn-span']
    margin-left: 8px 
  @media (max-width: 768px)
    font-size: 16px
    line-height: normal
    padding: .16rem .266667rem 
    ss-border($direction: all, $absolute: true)
    border-radius: .026667rem
    &:after
      border-radius: .053333rem
    &.btn-narrow
      font-size: 14px 
      padding: .066667rem .24rem    //设置第三方

  @media (min-width: 768px) and (max-width: 1920px)
    border: 1px solid transparent;
    border-color: #d9d9d9;
    border-radius: 4px;
    color: #495060;
    padding: 0 15px;
    font-size: 14px;
    height: $height
    user-select: none;
    -webkit-transition: all .3s cubic-bezier(.645,.045,.355,1);
    transition: all .3s cubic-bezier(.645,.045,.355,1);
/**
 * 直接写类名就可以执行对应的样式 如: .btn-default
 * @type {[type]}
 */
+ prefix-classes('btn-')

  .default
    @extends .btn
    color: #fff
    background-color: #fab427
    border-color:  @background-color
  .primary 
    @extends .btn
    color: #fff
    background-color: #2485cf     //0322阿c
    border-color:  @background-color
  .disabled
    @extends .btn
    color: #999
    background-color: #e3e3e3
    border-color:  @background-color
  .link
    @extends .btn
    color: #fab427
    background-color: initial
    border: none
    border-color:  @background-color
  
.btn-circle-only
  border-radius: 50%
  width: $height
  height: @width 
  padding: 0

.btn-circle
  border-radius: $height

.btn-loading
  position: relative
  pointer-events: none;
  &:before
    position: absolute;
    top: -1px;
    left: -1px;
    bottom: -1px;
    right: -1px;
    background: #fff;
    opacity: .35;
    content: "";
    border-radius: inherit;
    z-index: 1;
    -webkit-transition: opacity .2s;
    transition: opacity .2s;
    pointer-events: none;