position-fixed($top =0, $left = 0, $right= initial, $bottom = initial)
  position: fixed;
  top: $top
  left: $left
  right: $right
  bottom: $bottom
  width: 100%;


fixed-bg($width = 1198px, $height = auto, $background = #fff, $fixspacing = 0,  $fix = top)
  background: $background
  width: $width
  height: $height
  position: fixed;
  if ($fix == top)
    top: $fixspacing
  else if ($fix == bottom)
    bottom: $fixspacing
  z-index: 9999


//背景透明度
bg-opacity($background = #333, $height = 54px, $opacity = 0.6, $abs = bottom)
  background: $background
  width: 100%;
  height: $height
  opacity: $opacity
  position: absolute;
  left: 0;
  if ($abs == bottom)
    bottom: 0
  else if($abs == top)
    top: 0
