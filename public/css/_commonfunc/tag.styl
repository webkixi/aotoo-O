
tag($backgroud = #fff, $border-color = #ccc,$color = #333, $border-radius = 0, $padding-top = 2px, $padding-left = 8px, $height = 18px, $font-size = 12px)
  border: 1px solid transparent
  background: $backgroud
  border-color: $border-color
  border-radius: $border-radius
  color: $color
  display: inline-block;
  font-size: $font-size
  font-style: normal;
  padding-top: $padding-top
  padding-bottom: @padding-top
  padding-left: $padding-left
  padding-right: @padding-left
  height: $height


//不规则图形标签, 两边
irregular-tag($backgroud = #fff, $padding-top = 2px, $padding-left = 8px, $font-size = 12px,$border-color = none)
  background: $backgroud
  border: 1px solid transparent
  border-color: $border-color
  display: inline-block;
  font-size: $font-size
  font-style: normal;
  padding-top: $padding-top
  padding-bottom: @padding-top
  padding-left: $padding-left
  padding-right: @padding-left
  position: relative;
  color: #fff
  &:before,&:after
    content: ''
    width: 0
    height: 0
    // border-bottom: 10px solid #055a9b
    border-bottom: ($font-size + $padding-top * 2 + 3) solid $backgroud
    position: absolute;
    top: -1px
    // left: -7px
    left: - ($font-size)
    border-left: -(@left) solid transparent
  &:after
    left: initial;
    border-left: initial
    right: - ($font-size + 1)
    border-right: -(@right) solid transparent

//不规则图形标签 一边
/**
 * $backgroud 背景色
 * $color  文字颜色
 * $height  图形的高度
 * $padding-left  左填充
 * $padding-right   右填充
 * $font-size 字体大小
 * $trianglewidth  突出的地方的宽度
 * $triangleleftposition 左上突出 还是左下突出
 * $trianglerightposition 右上突出 还是右下突出
 * @type {[type]}
 */
irregular-tag2($backgroud = #666, $color = #fff, $height = 20px, $padding-left = 8px, $padding-right = 8px, $font-size = 12px, $trianglewidth = 10px, $triangleleftposition = top, $trianglerightposition = none, $triangleposit = none, $triangleSize = 0)
  background: $backgroud
  color: $color
  display: block;
  font-size: $font-size
  font-style: normal;
  height: $height
  line-height: @height
  padding-left: $padding-left
  padding-right: $padding-right
  position: relative;
  // position: relative;
  &:before,&:after
    content: ''
    width: 0
    height: 0
    position: absolute;
  &:before
    left: - $trianglewidth
    border-left: -(@left) solid transparent
    if $triangleleftposition == top
      border-top: ($height - $triangleSize) solid $backgroud
    else if $triangleleftposition == bottom
      border-bottom: ($height - $triangleSize) solid $backgroud
  &:after
    if $triangleposit == right
      right: - $trianglewidth
      border-right: -(@right) solid transparent
    else if $triangleposit == left
      left: - $trianglewidth
      border-left: -(@left) solid transparent
    if $trianglerightposition == top
      border-top: ($height - $triangleSize) solid $backgroud
    else if $trianglerightposition == bottom
      bottom: 0
      border-bottom: ($height - $triangleSize) solid $backgroud



