tabs-menu-body($height = 50px,$fontSize = 16px, $bb-li = none, $bl-li = none,  $ml-li = 0, $flex-li= auto, $li-hover = false)
  display-flex(row, flex-start, center,center)
  height: $height
  text-align: center;
  font-size: $fontSize
  li
    border-left: $bl-li
    cursor: pointer;
    position: relative;
    margin-left: $ml-li
    line-height: @height
    flex: $flex-li
    &:first-child
      border-left: 0
      margin-left: 0
    &:after
      border-bottom: $bb-li
      content: ''
      position: absolute;
      bottom: 0
      left: 0;
      width: 100%;
    &.select
      &:after
        border-bottom-color: #999999
  if $li-hover
    li
      &:hover
        &:after
          border-bottom-color: #000
