.search-left
  width: 20%
  background: #fff;
  height: .453333rem
  color: #333
  border-radius: 4px 0 0 4px;
  text-align center
  font-size: 17px;
  position: initial
  // position: relative
  ss-textellipsis(33px, 1)
  ss-display-flex(row, center, center, center)
  height 33px

.search-right
  background: #fff;
  border-radius: 0px 4px 4px 0px;
  width: 80%;
  // overflow: hidden      //加这个不能根本解决溢出的问题
  height: 33px;
  // position: relative
  ss-display-flex(row nowrap, flex-start, center, center)
  &:before
    content: ''
    width: 1px
    height: 100%
    // position: absolute;
    // top: 9px;
    // left: 0;
    border-left: 1px solid #e3e3e3
    -webkit-transform: scale(0.5, 0.5) translateY(50%)
    -webkit-transform-origin: 0 0 

.search-date
  font-size: 12px
  color: #333
  ss-display-flex(column, space-between, center, center)
  padding: 3px 0;
  p 
    line-height: @font-size
  i 
    color: #ff6600
    font-style: normal