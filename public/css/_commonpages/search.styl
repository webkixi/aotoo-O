//搜索  头部搜索条及业务头部搜索
.search-com
  ss-display-flex(row nowrap, space-between, center, center)
  background: #fff
  border-radius: .026667rem
  color: #333;
  width: 100%;
  font-size: 15px
  // overflow: hidden
  height: 100%;
  &:before
    content: '\e697'
    color: #999;
    text-align: center;
    font-size: 14px;
    width: .186667rem
    margin-left: .12rem
  input[type='text'],input[type='search']
    border: none
    // height: 33px
    // line-height: @height
    // padding: .106667rem .093333rem
    padding: 6px .093333rem
    width: 100%
    flex: 1
    background: transparent
  .icon-clean
    width: 28px
    
.list-head-search
  width: 100%;
  // height: 40px;
  z-index: 20;
  font-size: 18px;
  position: relative
  padding: .08rem .2rem
  line-height: normal;
  ss-display-flex(row nowrap, center, center)

.search-wrap
  // line-height 30px;
  width: 100%;
  .search-border
    border: none;
  .search-list
    position absolute
    left: 0
    top: 100%
    color: #333
    width: 100%
    line-height: .186667rem
    z-index: 20
  .input-dropdown-ul
    ss-dropdown-ul-mob()
    padding: 0 .2rem
    li
      padding: .146667rem 0
    em
      color: #2485cf
