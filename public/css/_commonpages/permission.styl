.content-initial
  content: initial
.ss-permission
  >li 
    margin-bottom: 10px
  .c-check
    ss-display-flex(row nowrap, flex-start, center)
    .fkp-checkbox-box
      background: #fff
      z-index: 2
    &:before
      content: ''
      height: 1px 
      width: 20px;
      background: #999;
      display: block
  .item-title-level0
    ss-display-flex(row nowrap, space-between, center, center)
    background: #fdfbfb
    width: 100%
    padding: 0 6px
    height: 38px
  .level0
    >.itemCategory
      >.property-ul
        >li
          &:after
            @extends .content-initial
  .level1,.level2
    margin-left: 7px
  .level3
    margin-left: 26px;
  .level4
    margin-left:28px
  .level0,.level1
    >.c-check
      &:before
        @extends .content-initial
    >.itemCategory
      >.caption
        .c-check
          &:before
            @extends .content-initial
    .property-ul
      >li 
        padding-top: 6px
        position: relative
        &:after
          content: ''
          height: 100%
          width: 1px 
          background: #999
          position: absolute;
          left: 0;
          top: -10px;
          z-index: 0;
  &.ul-hidden
    .level0
      >.itemCategory
        >.property-ul
          height: 0
          overflow: hidden
          &.active
            height: auto
.btn-edit
  &:before
    content: '编辑'
  &.active
    &:before
      content: '保存'
    
