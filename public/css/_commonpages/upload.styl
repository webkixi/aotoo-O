.upload-mob-display
  width: 100%;
  min-height: 194px;
  ss-border($line: dashed, $direction: all, $absolute: true)
  margin-top: 0.181rem;
  &:after
    border-radius: .08rem
  .uploader-wrap,.icon-add
    width: 100%
    height: 100%
  .uploader-button
    position: absolute;
    top: 0;
    left: 0;
    height: 100%;
    width: 100%;
    min-height: 194px;
    background: #f4f4f4;
    ss-display-flex(row, center, center, center)
  .icon-add
    ss-display-flex(column, center, center, center)
    color: #999
    font-size: 15px
    max-height: inherit;
    &:before
      margin-bottom: .133333rem
  .webuploader-pick
    ~div
      z-index: 2
      top: 0!important
      left: @top
      width: 100%!important
      height:@width
  .uploader-wrap
    position: relative;
  .uploader-list
    width: 100%
    height: 100%
    position: relative;
    z-index: 1;
    img
      // width: auto
      width: 100%;
      height: auto;
