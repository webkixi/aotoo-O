/**
 * 直接写: opacity: 0.9,
 * 最终生成：
  * unquote('progid:DXImageTransform.Microsoft.Alpha(Opacity=90)');
  * opacity: 0.9,
 */
opacity(n)
  opacity n
  if support-for-ie
    filter unquote('progid:DXImageTransform.Microsoft.Alpha(Opacity=' + round(n * 100) + ')')


iconfont()
  font-family:"iconfont" !important;
  font-style:normal;
  -webkit-font-smoothing: antialiased;
  -webkit-text-stroke-width: 0.2px;
  -moz-osx-font-smoothing: grayscale;
  font-size: 16px

/**
 * 直接写: content: '/xxxx',
 * 最终生成：
 * font-family:"iconfont" !important;
 * font-style:normal;
 * -webkit-font-smoothing: antialiased;
 * -webkit-text-stroke-width: 0.2px;
 * -moz-osx-font-smoothing: grayscale;
 * font-size: 16px;
 * content: '/xxxx',
 */
content(n)
  iconfont()
  content: n


//适用于类似简单的浮动，.flex-start>div(li/p....)是垂直居中的
//<div class="flex-row">
//<div></div><span></span><a></a>
//</div>
display-flex($flex-flow = row nowrap, $justify-content = flex-start, $align-items = initial, $align-content = initial)
  display: flex
  flex-flow: $flex-flow
  justify-content: $justify-content
  if($align-items != initial)
    align-items: $align-items
  if($align-content != initial)
    align-content: $align-content

.flex-row
  display-flex(row,flex-start,center,center)

.flex-row-wrap
  display-flex(row wrap,flex-start,center,center)

.flex-cloumn
  display-flex(column,flex-start,center,center)